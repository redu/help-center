<%= form_tag search_path, method: :get, class: "form-search" do %>
  <%= text_field_tag :t, params[:t], class: "control-area",
    placeholder: t(:placehold_small_form), "data-toggle" => ".hide-title"%>
  <button class="control-append-area button-default" type="submit">
    <span class="control-search-icon icon-magnifier-gray_16_18 text-replacement"><%= t(:search) %></span>
  </button>
<% end %>
