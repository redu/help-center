<div class="content-body">
  <div class="help-central-header">

    <a href="#" class="title icon-frequent-questions-lightblue_32_34-before">
      <h2 class="hide-title">
        <%= @topic.root.title %>
      </h2>
    </a>

    <%= render partial: "shared/small_search_form" %>

    <span class="subtitle hide-title legend"><%= topic_path_html(@children.first, true) %></span>
  </div>

  <hr class="list-separator">

  <div class="help-central-section">
    <h3><%= @topic.title %></h3>

    <span class="questions legend"><%= @children.count %> perguntas</span>

    <ul class="questions-list">
      <%= render partial: @children, locals: { with_path: true } %>
    </ul>
  </div>

  <hr class="list-separator">

  <%= render :partial => "shared/feel_supported", :locals => { :index => false } %>
</div>
