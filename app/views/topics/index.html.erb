<div class="content-body">
  <%= render partial: "shared/big_search_form", locals: { question: t(:big_form_question) } %>

  <div class="section-questions">

    <h3 class="section-title icon-frequent-questions-lightgray_32_34-before"><%= t(:frequently_questions) %></h3>

    <ul class="questions-list">
      <%= render partial: @top_questions.results, locals: { with_path: true } %>
    </ul>
  </div>

  <hr class="list-separator">

  <div class="section">

    <h3 class="section-title icon-help-central-lightgray_32_34-before"><%= t(:learn_with_guides) %></h3>

    <ul class="guides-list clearfix">
      <%= render partial: "basic_guide" %>
      <%= render partial: @guides, locals: { with_path: true } %>
    </ul>

  </div>

  <hr class="list-separator">

  <%= render partial: "shared/feel_supported", locals: { index: true } %>
</div>
