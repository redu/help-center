<div class="content-body">
  <%= render partial: "shared/big_search_form", locals: { question: t(:search_question) } %>

  <% if @results.empty? %>
    <div class="search-empty">
      <span class="icon-help-central-empty_128 show text-replacement"><%= t(:not_found) %></span>
      <p><%= t(:not_found_sorry) %><b>“<%= params[:t] %>”</b>. <%= t(:try_another) %>.</p>
    </div>

  <% else %>
    <div class="search-results help-central-section">
      <span><%= t(:search_for) %> <b>“<%= params[:t] %>”</b>. <%= t(:found) %> <b><%= @search.total %></b> <%= t(:results, count: @search.total) %>.</span>

      <ul class="questions-list">
        <div id="search-results">
          <%= render partial: @results, locals: { with_path: true, search: true } %>
        </div>
      </ul>
    </div>

    <hr class="list-separator">

    <div class="help-central-footer">
      <div class="pagination">
        <%= paginate @results, remote: true, outer_window: 1, inner_window: 4 %>
      </div>
    </div>
  <% end %>
</div>
